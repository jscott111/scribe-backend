{
  "name": "scribe-backend",
  "version": "1.0.0",
  "description": "Backend server for Scribe - Real-time audio translation app",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=prod node server.js",
    "dev": "concurrently --kill-others \"npm run emulator\" \"sleep 5 && npm run dev:server\"",
    "dev:server": "FIRESTORE_EMULATOR_HOST=localhost:8181 NODE_ENV=dev nodemon server.js",
    "emulator": "firebase emulators:start --only firestore --import=./emulator-data --export-on-exit=./emulator-data",
    "test": "echo \"Error: no test specified\" && exit 1",
    "kill": "pkill -f 'node'"
  },
  "keywords": [
    "translation",
    "audio",
    "real-time",
    "ai",
    "websockets"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "@google-cloud/secret-manager": "^6.1.0",
    "@google-cloud/speech": "^6.0.0",
    "@google-cloud/text-to-speech": "^6.4.0",
    "@google-cloud/translate": "^8.0.0",
    "@sendgrid/mail": "^8.1.5",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.6",
    "qrcode": "^1.5.4",
    "socket.io": "^4.7.2",
    "speakeasy": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.1"
  }
}
