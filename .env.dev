# Environment Configuration
NODE_ENV=dev
PORT=3001
HOST=0.0.0.0

# Database
DB_TYPE=postgres
DB_PATH=./data/scribe.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Azure Translator
AZURE_TRANSLATOR_KEY=your-azure-translator-key-here
AZURE_TRANSLATOR_REGION=your-azure-region-here
AZURE_TRANSLATOR_ENDPOINT=https://api.cognitive.microsofttranslator.com

# CORS
CORS_ORIGIN=http://speaker.localhost:5173,http://listener.localhost:5173,https://api.localhost:3001

# Logging
LOG_LEVEL=debug
